# =============================================================================
# TrustTrip Environment Variables Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# SERVER-SIDE VARIABLES (Keep these secret - never expose to client)
# =============================================================================

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/trusttrip_db"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="trusttrip_db"
DATABASE_USER="your_db_user"
DATABASE_PASSWORD="your_db_password"

# API Keys and Secrets
API_SECRET_KEY="your-super-secret-api-key-here"
JWT_SECRET="your-jwt-secret-key-for-authentication"
ENCRYPTION_KEY="your-32-character-encryption-key"

# External API Integration
BUS_BOOKING_API_KEY="your-bus-booking-api-key"
BUS_BOOKING_API_URL="https://api.busbooking.com/v1"
PAYMENT_GATEWAY_SECRET="your-payment-gateway-secret"

# Email Service (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@trusttrip.com"

# File Storage
UPLOAD_SECRET="your-file-upload-secret"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="trusttrip-uploads"

# =============================================================================
# CLIENT-SIDE VARIABLES (Safe to expose - use NEXT_PUBLIC_ prefix)
# =============================================================================

# Application Configuration
NEXT_PUBLIC_APP_NAME="TrustTrip"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Endpoints
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"
NEXT_PUBLIC_REFUND_API_ENDPOINT="/api/refund"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="true"
NEXT_PUBLIC_ENABLE_MULTI_LANGUAGE="false"

# Third-party Services (Public keys only)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_public_key"

# Map and Location Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="your-mapbox-public-token"

# =============================================================================
# ENVIRONMENT SPECIFIC
# =============================================================================

# Current environment (development, staging, production)
NODE_ENV="development"
NEXT_PUBLIC_ENVIRONMENT="development"

# Logging and Debugging
LOG_LEVEL="info"
ENABLE_DEBUG_LOGS="true"